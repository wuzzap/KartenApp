<Window x:Class="Karteikarten_APP.Kartenansicht"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Karteikarten_APP"
        mc:Ignorable="d"
        Title="Kartenansicht" Height="480" Width="600">
    <Grid>
        <Button Name="Schließen" Content="Schließen" HorizontalAlignment="Left" Margin="497,394,0,0" VerticalAlignment="Top" Width="75" Click="Schließen_Click" RenderTransformOrigin="0.48,1.591"/>
        <Label Content="Frage und Antwort" Name="erg" Background="AliceBlue" HorizontalAlignment="Left" Height="225" Margin="49,20,0,0" VerticalAlignment="Top" Width="431"/>
        <Button Content="ZeigeAntwort" HorizontalAlignment="Left" Height="25" Margin="207,255,0,0" VerticalAlignment="Top" Width="83" Click="Button_Click_Zeige_Antwort" RenderTransformOrigin="0.036,0.6"/>
        <Button Content="Zurück" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="110,258,0,0" Click="Button_Click_Zurück"/>
        <Button Content="Vor" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="325,258,0,0" Click="Button_Click_Vor"/>

        <Button Content="Richtig: " HorizontalAlignment="Left" Margin="25,315,0,0" VerticalAlignment="Top" Height="26" Click="Button_Click_Richtig" Width="65"/>
        <Label Name="richtiglbl" Content="xxx" HorizontalAlignment="Left" Margin="97,315,0,0" VerticalAlignment="Top"/>

        <Button Name="wrong" Content="Falsch" HorizontalAlignment="Left" Margin="25,347,0,0" VerticalAlignment="Top" Height="26" Click="Button_Click_Wrong" Width="65"/>
        <Label Name="falschlbl" Content="xxx" HorizontalAlignment="Left" Margin="97,347,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.132,0"/>


        <Button Name="AddPriority" Content="Priorität +" HorizontalAlignment="Left" Margin="497,55,0,0" VerticalAlignment="Top" Width="85" RenderTransformOrigin="0.647,-2.182" Click="AddPriority_Click"/>
        <Button Name="ReducePriority" Content="Priorität -" HorizontalAlignment="Left" Margin="497,135,0,0" VerticalAlignment="Top" Width="85" Click="ReducePriority_Click"/>
        <Label Name="PrioLbL" HorizontalAlignment="Left" Margin="497,90,0,0" VerticalAlignment="Top" Height="30" Width="85"/>
        <Button Name="Reset" Content="Reset" HorizontalAlignment="Left" Margin="25,388,0,0" VerticalAlignment="Top" Width="65" Click="Reset_Click"/>


    </Grid>
</Window>
